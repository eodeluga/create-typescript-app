  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "bun",
      "request": "launch",
      "program": "src/app.ts",
      "strictEnv": false,
      "watchMode": false,
      "stopOnEntry": false,
      "noDebug": false, 
      "internalConsoleOptions": "openOnSessionStart"    
    },
    {
      "name": "Test Program",
      "type": "bun",
      "request": "launch",
      "program": "node_modules/mocha/lib/cli/cli.js",
      "args": ["test/*"],
      "strictEnv": false,
      "watchMode": false,
      "stopOnEntry": false,
      "noDebug": false, 
      "internalConsoleOptions": "openOnSessionStart" 
    },
  ]
}
