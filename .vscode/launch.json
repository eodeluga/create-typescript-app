  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "console": "integratedTerminal",
      "request": "launch",
      "name": "Launch Program",
      "program": "${env:NVM_BIN}/npx",
      "args": ["ts-node","src/app.ts"],
      "runtimeExecutable": "${env:NVM_BIN}/node",      
    },
    {
      "type": "node",
      "console": "integratedTerminal",
      "request": "launch",
      "preLaunchTask": "build",
      "name": "Test Program",
      "program": "${env:NVM_BIN}/npx",
      "args": [
        "mocha", 
        "--require", 
        "ts-node/register", 
        "--extensions", 
        "ts,tsx", 
        "./src/test/test.spec.ts"
      ],
      "runtimeExecutable": "${env:NVM_BIN}/node",
    },
  ]
}