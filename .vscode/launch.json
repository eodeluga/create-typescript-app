  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "console": "integratedTerminal",
      "request": "launch",
      "name": "Launch Program",
      "program": "${env:NVM_BIN}/yarn",
      "args": ["env-cmd", "ts-node","src/app.ts"],
      "runtimeExecutable": "${env:NVM_BIN}/node",      
    },
    {
      "type": "node",
      "console": "integratedTerminal",
      "request": "launch",
      "name": "Test Program",
      "program": "${env:NVM_BIN}/yarn",
      "args": ["env-cmd", "ts-mocha", "test/**/test.spec.ts"],
      "runtimeExecutable": "${env:NVM_BIN}/node",
    },
  ]
}
